<configuration>
    <appender name="TEXT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${GPC_LOGGING_FORMAT:-%d{yyyy-MM-dd HH:mm:ss.SSS} Level=%-5level Logger=%logger{36} ConversationId=%X{ConversationId} TaskId=%X{TaskId} Thread="%thread" Message="%msg"%n}
            </pattern>
        </encoder>
    </appender>


    <root level="${GPC_ROOT_LOGGING_LEVEL:-WARN}">
        <appender-ref ref="TEXT}"/>
    </root>

    <logger name="uk.nhs.adaptors.gpc" level="${GPC_LOGGING_LEVEL:-INFO}" />
    <logger name="reactor.netty.http.client" level="${GPC_LOGGING_LEVEL:-WARN}" />
</configuration>